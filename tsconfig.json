{
    "compilerOptions": {
        "paths": {
            "@components/*": [
                "./src/components/ui/*"
            ],
            "@layouts/*": [
                "./src/components/layouts/*"
            ],
            "@pages/*": [
                "./src/components/pages/*"
            ],
            "@languages/*": [
                "./src/languages/*"
            ],
            "@services/*": [
                "./src/services/*"
            ],
            "@types": [
                "./src/types"
            ],
            "@store": [
                "./src/store"
            ],
            "@icons": [
                "./src/assets/icons"
            ],
            "@hooks/*": [
                "./src/hooks/*"
            ],
            "@styles/*": [
                "./src/styles/*"
            ],
            "@sb/*": [
                "./.storybook/*"
            ],
            "bem-cn-custom": [
                "./src/utils/bemCnCustom"
            ]
        },
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "types": [
            "vite/client"
        ]
    },
    "include": ["src"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
