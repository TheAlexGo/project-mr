@import "themes";

* {
    box-sizing: border-box;

    ::-webkit-scrollbar {
        width: 0;
    }

    ::-webkit-scrollbar-track {
        background: transparent;
    }

    ::-webkit-scrollbar-thumb {
        background-color: transparent;
        border-radius: 2px;
    }
}

a {
    color: inherit;
    text-decoration: none;
}

html,
body {
    height: 100%;
    margin: 0;
    padding: 0;
    overscroll-behavior-y: none;
}

body {
    color: $color_main;
    font-style: normal;
    background-color: $color_background;
    -moz-osx-font-smoothing: grayscale;
    -webkit-font-smoothing: antialiased;
    fontRegular();

    &.__is-overflow_hidden {
        overflow: hidden;
    }
}

#root {
    display: flex;
    flex-direction: column;
    width: 100%;
    max-width: none;
    height: 100%;
}

h1,
h2,
h3,
h4,
h5,
h6 {
    margin: 0;
    font-size: inherit;
}

h4 {
    margin: 0 0 20px;
}

img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

ul {
    margin: 0;
    padding: 0;
    list-style: none;
}

* {
    &:focus-visible {
        outline: 1px solid $color_primary;
    }
}
