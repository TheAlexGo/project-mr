$size-top = s('calc(%s + env(safe-area-inset-top))', $size-header);
$size-right = s('calc(%s + env(safe-area-inset-right))', $offset-4x);
$size-bottom = s('calc(%s + env(safe-area-inset-bottom))', $size-nav);
$size-left = s('calc(%s + env(safe-area-inset-left))', $offset-4x);

.layout {
    position: relative;
    display: flex;
    flex-grow: 1;
    flex-direction: column;
    width: 100%;
    padding: 0 $size-right $size-bottom $size-left;

    useMediaWidth();
}

.navbar {
    position: fixed;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 10;
    width: 100%;
    padding: 0 s('env(safe-area-inset-right)') s('env(safe-area-inset-bottom)') s('env(safe-area-inset-left)');
    background-color: $color_surface;
}
