.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    height: 100%;
    padding: 32px 0;
}

.top {
    flex-grow: 1;
    width: 100%;
}

.container-name {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    margin-bottom: 32px;
    padding-bottom: 16px;
    border-bottom: 1px solid $color_surface;
}

.button-settings {
    margin-bottom: 32px;
}

.version {
    color: $color_secondary;
    font-size: $fs-xxs;
}

.button-out {
    margin-bottom: 16px;
    fontSemiBold();
    font-size: $fs-xs;
}
