.container {
    width: 100%;
    padding-top: 32px;
}

.container-name {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    margin-bottom: 32px;
    padding-bottom: 16px;
    border-bottom: 1px solid var(--color_surface);
}

.greetings {
    margin-bottom: 4px;
    color: var(--color_secondary);
    font-size: $font-size-h4;
}

.name {
    fontBold();
    color: var(--color_main);
    font-size: $font-size-h3;
}

.button {
    background-color: var(--color_surface);
}
