.wrapper
    width 100%

.heading
    margin-bottom 24px

.list
    margin 0
    padding 0

    &.__axis
        &-y
            display grid
            grid-gap 24px 8px
            grid-template-columns repeat(auto-fit, minmax($size-card, 1fr))

            & .card
                width 100%
        &-x
            display flex
            flex-shrink 0
            flex-flow row nowrap
            overflow auto

            & .wrapper-card:not(:last-child)
                margin-right 8px
