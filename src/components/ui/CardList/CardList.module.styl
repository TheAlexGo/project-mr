.wrapper {
    width: 100%;

    &.__scroll_snap-y_mandatory {
        display: flex;
        flex-direction: column;
        flex-grow: 1;
        height: 100%;
    }
}

.heading {
    margin-bottom: 24px;
}

.container {
    position: relative;
    flex-grow: 1;
}

.list {
    margin: 0;
    padding: 0;

    &.__axis {
        &-y {
            display: grid;
            grid-gap: 24px 8px;
            grid-template-columns: repeat(1, 1fr);

            +useMobileSWidth() {
                grid-template-columns: repeat(2, 1fr);
            }

            +useMobileMWidth() {
                grid-template-columns: repeat(3, 1fr);
            }

            +useMobileLWidth() {
                grid-template-columns: repeat(4, 1fr);
            }

            +useTabletMWidth() {
                grid-template-columns: repeat(5, 1fr);
            }

            +useLaptopWidth() {
                grid-template-columns: repeat(6, 1fr);
            }

            & .card {
                width: 100%;
            }
        }
        &-x {
            display: flex;
            flex-flow: row nowrap;
            flex-shrink: 0;
            overflow: auto;

            & .wrapper-card:not(:last-child) {
                margin-right: 8px;
            }
        }
    }

    &.__scroll_snap {
        &-x_mandatory {
            scroll-snap-type: x mandatory;

            & .wrapper-card {
                scroll-snap-align: center;
            }
        }

        &-y_mandatory {
            position: absolute;
            width: 100%;
            height: 100%;
            overflow-y: scroll;
            scroll-snap-type: y mandatory;

            & .wrapper-card {
                scroll-snap-align: center;
            }
        }
    }

    &::-webkit-scrollbar {
        display: none;
        width: 0;
        height: 0;
        -webkit-appearance: none;
    }
}

.container-loader {
    position: relative;
    width: 100%;
    height: 48px;
}
