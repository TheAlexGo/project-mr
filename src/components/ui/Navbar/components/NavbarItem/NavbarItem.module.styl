.item {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    height: 42px;
    padding: 0;
    color: $color_secondary;

    &.__is-active {
        color: $color_active;
    }
}

.icon {
    width: 24px;
    height: 24px;
    margin-bottom: 4px;
}

.title {
    font-weight: 500;
    font-size: 12px;
    line-height: 16px;
}
