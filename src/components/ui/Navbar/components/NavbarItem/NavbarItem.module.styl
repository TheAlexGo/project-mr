.item
    width 100%

    &.__is-active
        .title
            color var(--color_active)
        .icon
            color var(--color_active)

.button
    flex-direction column
    height 42px
    padding 0
    cursor pointer

.icon
    width 24px
    height 24px
    margin-bottom 4px
    color var(--color_on-surface)

.title
    color var(--color_on-surface)
    font-weight 500
    font-size 12px
    line-height 16px
