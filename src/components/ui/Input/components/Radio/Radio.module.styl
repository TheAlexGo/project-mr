.container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 16px 0;
    border-bottom: 1px solid var(--color_surface);
}

.label {
    fontMedium();
    color: var(--color_main);
    font-size: $fs-s;
}

.wrapper {
    position: relative;
}

.radio {
    position: absolute;
    width: 0;
    height: 0;
    opacity: 0;

    &:checked {
        & + .radio-custom {
            background-color: var(--color_active);
            border: 1px solid var(--color_active);

            & .icon {
                display: block;
            }
        }
    }

    &:focus-visible {
        & + .radio-custom {
            outline: 1px solid var(--color_primary);
        }
    }
}

.radio-custom {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 24px;
    height: 24px;
    background-color: var(--color_surface);
    border: 1px solid var(--color_on-surface);
    border-radius: 50%;
}

.icon {
    display: none;
    color: var(--color_white);
}
