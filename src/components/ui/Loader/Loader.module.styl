.loader {
    position: absolute;
    right: 0;
    left: 0;
    margin: 0 auto;

    squareElementSizes(true);
}

.circle {
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    border: 2px solid var(--color_active);
    border-color: $color_active transparent var(--color_active) transparent;
    border-radius: 50%;
    animation: spin 1.2s linear infinite;
}

@keyframes spin {
    from {
        transform: rotate(0deg);
    }

    to {
        transform: rotate(360deg);
    }
}
