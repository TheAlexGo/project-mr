.loader
    position absolute
    right 0
    left 0
    margin 0 auto
    &__circle
        box-sizing border-box
        width 100%
        height 100%
        border 2px solid var(--color_active)
        border-color var(--color_active) transparent var(--color_active) transparent
        border-radius 50%
        animation spin 1.2s linear infinite

    &--size
        &__24
            top calc(50% - 12px)
            width 24px
            height 24px

        &__36
            top calc(50% - 18px)
            width 36px
            height 36px

        &__40
            top calc(50% - 20px)
            width 40px
            height 40px

        &__52
            top calc(50% - 26px)
            width 52px
            height 52px

@keyframes spin
    from
        transform rotate(0deg)

    to
        transform rotate(360deg)
