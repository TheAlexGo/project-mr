.header {
    width: 100%;
    height: $size-header;
    padding: 16px 0;
    color: var(--color_main);
}

.wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100%;
    padding: 0 16px;
    color: var(--color_main);

    useDesktopWidth();
}

.heading {
    word-break: break-word;
}

.description {
    margin: 16px 0 36px;
    font-weight: normal;
    font-size: $fs-s;
    line-height: 21px;
}

.left,
.right {
    display: flex;
    align-items: center;
}

.right {
    &.__is-only-buttons {
        justify-content: space-between;
        width: 100%;
    }
}

.back {
    margin-right: 16px;
}

.button {
    margin-right: 16px;

    &:last-child {
        margin-right: 0;
    }
}
