.tabs {
    display: flex;
    padding: 16px 0;

    useDesktopWidth();

    .__with-fix_header & {
        position: fixed;
        right: 0;
        left: 0;
        z-index: 10;
        margin-bottom: 0;
        padding: 16px;
        background-color: var(--color_background);
    }
}

.content {
    useDesktopWidth();

    .__with-fix_header & {
        padding-top: 60px;
    }
}
