.button {
    position: relative;
    height: 48px;
    margin: 0;
    padding: 0 12px;
    color: $color_white;
    font-size: $font-size-h4;
    background-color: transparent;
    border: 0;
    border-radius: 9px;
    cursor: pointer;
    transition: $trans-300;

    fontMedium();

    squareElementSizes();

    flexPositionsAndDirections();

    &:disabled {
        cursor: not-allowed;
    }

    &.__theme {
        &-primary {
            background-color: $color_primary;

            +hover('__state') {
                background-color: $color_active;
            }

            &:disabled {
                color: $color_on-surface;
                background-color: $color_surface;
            }
        }

        &-secondary {
            +hover('__state') {
                background-color: $color_surface;
            }

            &:disabled {
                color: $color_on-surface;
            }
        }

        &-clear {
            flex-shrink: 0;
            cursor: pointer;
            transition: background-color 0.3s;
            all: unset;
        }
    }

    &.__is {
        &-loading {
            width: 48px;
        }

        &-wide {
            width: 100%;
        }

        &-rounded {
            border-radius: 50%;
        }
    }

    &.__with {
        &-no_padding {
            padding: 0;
        }
    }
}

.icon svg {
    display: block;
}
