.card {
    &:hover {
        .overlay {
            &-front {
                background-color: $color_navy-hover;
            }

            &-middle
            &-back {
                transform: scale(1.01);
            }
        }
    }
}

.bookmark {
    position: absolute;
    top: 50%;
    left: 50%;
    z-index: 4;
    color: $color_light;
    transform: translate(-50%, -50%);
}

.overlays {
    position: relative;
    display: flex;
    justify-content: center;
    width: 100%;
    height: 240px;
}

.overlay {
    &-front
    &-middle
    &-back {
        position: absolute;
        height: 228px;
        border-radius: 3px;
        transition: $trans-300;
    }

    &-front {
        position: relative;
        top: 12px;
        z-index: 3;
        width: 100%;
        background-color: #8778e3;
    }

    &-middle {
        top: 6px;
        z-index: 2;
        width: calc(100% - 6px);
        background-color: $color_active;
    }

    &-back {
        z-index: 1;
        width: calc(100% - 18px);
        background-color: #291a80;
    }
}
